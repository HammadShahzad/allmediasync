# Slack Configuration
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_NOTIFICATION_CHANNEL=all-media

# ClickUp Configuration
# Get your API token from https://app.clickup.com/settings/apps
CLICKUP_API_TOKEN=pk_your_api_token
CLICKUP_TEAM_ID=your_team_id
CLICKUP_WEBHOOK_SECRET=optional_webhook_secret

# Dropbox Configuration
# Create an app at https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY=your_app_key
DROPBOX_APP_SECRET=your_app_secret
DROPBOX_ACCESS_TOKEN=your_access_token

# Optional: Cursor for webhook change tracking (leave empty to start fresh)
DROPBOX_CURSOR=

# Optional: Watched folders for Dropbox notifications
# Comma-separated list of folder paths to watch
# Leave empty to watch all folders
DROPBOX_WATCHED_FOLDERS=/Clients,/Projects

# Optional: Channel mappings
# Map ClickUp spaces to Slack channels
# Format: SpaceName1:channel1,SpaceName2:channel2
CHANNEL_MAPPING=LST:lst-updates,Cashnowauto:cashnowauto-updates

# Map Dropbox folders to Slack channels
# Format: /FolderPath1:channel1,/FolderPath2:channel2
DROPBOX_CHANNEL_MAPPING=/Clients/LST:lst-updates,/Clients/Cashnowauto:cashnowauto-updates
